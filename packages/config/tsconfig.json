{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["esnext", "DOM"],
    "module": "CommonJS",
    "declaration": true,
    "noEmit": false,
    "incremental": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "dist",
    "paths": {
      "intlayer": ["../intlayer/src/index.ts"],
      "intlayer-cli": ["../cli/src/index.ts"],
      "intlayer-config": ["../config/src"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "**/*",
    "./tsconfig.cjs.json",
    "./tsconfig.esm.json",
    "./tsconfig.types.json"
  ]
}

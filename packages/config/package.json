{
  "name": "intlayer-config",
  "description": "Shared configuration package for IntLayer - Layer of abstraction between the business logic and the data access layer. Manage internationalization in a simple way, through TypeScript, JavaScript or JSON declaration file.",
  "keywords": [
    "intlayer",
    "layer",
    "abstraction",
    "data",
    "internationalization",
    "i18n",
    "typescript",
    "javascript",
    "json",
    "file"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "clean": "rimraf ./dist"
  },
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aypineau"
  },
  "homepage": "https://github.com/aypineau/intlayer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aypineau/intlayer"
  },
  "bug": {
    "url": "https://github.com/aypineau/intlayer/issues"
  },
  "main": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "require": "./dist/cjs/src/index.js",
      "import": "./dist/esm/src/index.js",
      "default": "./dist/esm/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "package.json": [
        "./package.json"
      ]
    }
  },
  "files": [
    "./dist/**/*.{js,ts,map}",
    "./src",
    "./package.json"
  ],
  "devDependencies": {
    "@utils/eslint-config": "workspace:^",
    "rimraf": "5.0.5",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.11",
    "@swc-node/register": "^1.9.0",
    "@types/node": "^20.11.30"
  },
  "engines": {
    "node": ">=14.18"
  }
}

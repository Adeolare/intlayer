{
  "name": "intlayer-transpiler",
  "description": "Transpiler for IntLayer - Webpack process to transpile TypeScript files to JavaScript files into IntLayer dictionaries.",
  "version": "0.1.0",
  "private": false,
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aypineau"
  },
  "homepage": "https://github.com/aypineau/intlayer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aypineau/intlayer"
  },
  "bug": {
    "url": "https://github.com/aypineau/intlayer/issues"
  },
  "scripts": {
    "build": "tsc",
    "serve": "webpack serve",
    "transpile": "webpack",
    "process-files": "ts-node src/transpiler/processFilesCLI.ts --dir $npm_config_dir --extension $npm_config_extension --no-node-snapshot",
    "clean": "rimraf ./dist",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs --fix",
    "prettier:fix": "prettier --write **/*.{ts,tsx,js,json,md}",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "exports": {
    ".": {
      "require": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "package.json": [
        "./package.json"
      ],
      "source-files": [
        "./dist/source-files"
      ]
    }
  },
  "files": [
    "./bin/cli.cjs",
    "./dist/**/*.{js,ts,map}",
    "./src",
    "./package.json"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@types/yargs": "^17.0.32",
    "@utils/eslint-config": "workspace:^",
    "rimraf": "5.0.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "intlayer": "workspace:^"
  },
  "engines": {
    "node": ">=14.18"
  }
}

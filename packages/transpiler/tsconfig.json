{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // "baseUrl": ".",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "declaration": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "incremental": true,
    "strict": true,
    "outDir": "dist",
    "paths": {
      "intlayer": ["../intlayer/src/index.ts"]
    },
    "resolveJsonModule": true, // to eventually add in config - allows importing JSON files
    "allowJs": true // to eventually add in config -  allows importing JS files
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "webpack.config.ts", "settings.ts"]
}

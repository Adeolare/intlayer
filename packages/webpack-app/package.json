{
  "name": "intlayer-webpack-app",
  "description": "Webpack application for IntLayer - Webpack process to transpile TypeScript files to JavaScript files into IntLayer dictionaries.",
  "keywords": [
    "intlayer",
    "webpack",
    "application",
    "transpile",
    "typescript",
    "javascript",
    "json",
    "file"
  ],
  "type": "commonjs",
  "version": "0.0.0",
  "private": false,
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aypineau"
  },
  "homepage": "https://github.com/aypineau/intlayer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aypineau/intlayer"
  },
  "bug": {
    "url": "https://github.com/aypineau/intlayer/issues"
  },
  "scripts": {
    "build": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json ./tsconfig.bin.json",
    "dev": "webpack serve --config ./src/webpack.config.ts",
    "serve": "webpack serve --config ./dist/intlayer-webpack-app/src/webpack.config.js",
    "transpile": "webpack --config ./dist/intlayer-webpack-app/src/webpack.config.js",
    "clean": "rimraf ./dist",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs --fix",
    "prettier:fix": "prettier --write **/*.{ts,tsx,js,json,md}",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "bin": {
    "intlayer": "./dist/bin/bin/cli.js"
  },
  "module": "dist/intlayer-webpack-app/index.js",
  "main": "dist/cjs/webpack-app/src/index.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "package.json": [
        "./package.json"
      ]
    }
  },
  "files": [
    "./dist/**/*.{js,ts,map}",
    "./src",
    "./bin",
    "./package.json"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@types/node": "^20.11.30",
    "@types/yargs": "^17.0.32",
    "@utils/eslint-config": "workspace:^",
    "rimraf": "5.0.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@swc-node/register": "^1.9.0",
    "glob": "^10.3.10",
    "intlayer": "workspace:^",
    "intlayer-cli": "workspace:^",
    "intlayer-config": "workspace:^",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=14.18"
  }
}

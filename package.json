{
  "name": "intlayer-monorepo",
  "description": "IntLayer monorepo - Layer of abstraction between the business logic and the data access layer. Manage internationalization in a simple way, through TypeScript, JavaScript or JSON declaration file.",
  "version": "1.00.0",
  "private": false,
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aypineau"
  },
  "homepage": "https://github.com/aypineau/intlayer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aypineau/intlayer"
  },
  "scripts": {
    "test": "pnpm recursive run test --parallel",
    "build": "pnpm recursive run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:fix": "prettier --write **/*.{ts,tsx,js,json,md}",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "prepare": "husky",
    "lint-staged": "lint-staged --allow-empty",
    "release:dev": "pnpm build && pnpm recursive run publish --verbose --topological-dev --parallel --no-private --tolerate-republish --tag=dev",
    "release": "pnpm build && pnpm recursive run publish --verbose --topological-dev --parallel --no-private --tolerate-republish"
  },
  "bug": {
    "url": "https://github.com/aypineau/intlayer/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": "please-use-pnpm",
    "npm": "please-use-pnpm",
    "pnpm": "^8.15.4"
  },
  "packageManager": "pnpm@8.15.4",
  "dependencies": {
    "@changesets/cli": "2.27.1",
    "@utils/eslint-config": "workspace:^",
    "@vitejs/plugin-react": "^4.2.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/types": "^19.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  }
}
